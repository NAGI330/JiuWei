<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll"
        android:layout_marginBottom="0dp"
        android:alpha="0.2" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/share_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="30dp">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20sp"
                android:layout_marginRight="20sp"
                android:background="#ffffff"
                android:orientation="vertical"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:id="@+id/createCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line"
                        android:background="#ffffff"
                        android:gravity="center"
                        android:text="取消"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="发布活动"
                        android:textColor="#000000"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/releaseActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:text="发布"
                        android:textColor="#153ACF"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/line"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_below="@+id/share_ll"
                        android:layout_weight="1"
                        android:background="#000000" />
                </TableRow>

                <TableRow>

                    <TextView />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="活动名称"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/activityName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:background="@drawable/sign_edittext_type"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="活动描述"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/activityDescribe"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginLeft="10sp"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:background="@drawable/sign_edittext_type"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="活动地点"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/activitySpace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_span="3"
                        android:background="@drawable/sign_edittext_type"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/spaceSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="选择地点" />
                </TableRow>

                <TableRow>

                    <TextView />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="活动时间"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/activityTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_span="3"
                        android:background="@drawable/sign_edittext_type"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/timeSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="选择时间" />
                </TableRow>

                <TableRow>

                    <TextView />
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="最大人数"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/numberMax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10sp"
                        android:layout_span="3"
                        android:layout_weight="1"
                        android:background="@drawable/sign_edittext_type"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp"
                        android:textSize="18sp" />
                </TableRow>

                <TableRow>

                    <TextView />
                </TableRow>

                <TableRow>

                    <CheckBox
                        android:id="@+id/onlyFriends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_span="3"
                        android:text="是否只允许好友参加该活动" />
                </TableRow>

                <TableRow>

                    <TextView />
                </TableRow>

            </TableLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>