<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="20sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:stretchColumns="1"
    >
    <TableRow>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@mipmap/robotto"
            android:layout_span="3"/>
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账  号"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:background="@drawable/sign_edittext_type"
            android:hint="请填写账号"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密  码"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请填写密码"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:background="@drawable/sign_edittext_type"
            android:id="@+id/userpassword"
            android:inputType="textPassword"
            android:layout_span="3"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>


    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请确认您的密码"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:background="@drawable/sign_edittext_type"
            android:id="@+id/userpasswordconfirm"
            android:inputType="textPassword"
            android:layout_span="3"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="绑定邮箱"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请绑定您的邮箱"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:background="@drawable/sign_edittext_type"
            android:id="@+id/email"
            android:layout_span="3"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>

    <TableRow>
        <CheckBox
            android:id="@+id/manual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读用户手册"
            android:layout_span="3"
            />
    </TableRow>


    <TableRow>
        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="注册"
            android:background="@drawable/sign_button_type"
            android:textColor="#ffffff"/>
    </TableRow>
    <TableRow>
        <TextView />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/backtomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="返回登录界面"
            android:background="@drawable/sign_button_type"
            android:textColor="#ffffff"/>
    </TableRow>


</TableLayout>
