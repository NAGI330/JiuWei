<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_marginTop="20sp"
    android:layout_marginLeft="20sp"
    android:layout_marginRight="20sp"
    android:stretchColumns="1"
    >
    <TableRow>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:src="@mipmap/robotto"
            android:layout_span="3"/>
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="账  号"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:background="@drawable/sign_edittext_type"
            android:hint="需要找回的账号"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/userPwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:background="@drawable/sign_edittext_type"
            android:hint="请填写新密码"
            android:inputType="textPassword"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:textSize="18sp" />
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>
    <TableRow>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认密码"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请确认新的密码"
            android:paddingTop="10sp"
            android:paddingBottom="10sp"
            android:background="@drawable/sign_edittext_type"
            android:id="@+id/userPwdConfirm"
            android:inputType="textPassword"
            android:layout_span="3"
            android:textSize="18sp" />
    </TableRow>


    <TableRow>
        <TextView />
    </TableRow>



    <TableRow>
        <Button
            android:id="@+id/changePwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="修改密码"
            android:background="@drawable/sign_button_type"
            android:textColor="#ffffff"/>
    </TableRow>
    <TableRow>
        <TextView />
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/backtomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="3"
            android:text="返回登录界面"
            android:background="@drawable/sign_button_type"
            android:textColor="#ffffff"/>
    </TableRow>

    <TableRow>
        <TextView />
    </TableRow>
</TableLayout>
